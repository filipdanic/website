#!/usr/bin/env ruby

require 'compass'
Compass.add_project_configuration 'config.rb'


## preprocessing
preprocess do

  @items.each do |item|
    hs_item_times(item)
    hs_item_metas(item)
    hs_item_register(item)
    event_register(item)
  end

  hs_sort_alls
  events_sort

end


## javascript

compile '/js/**/*' do
end

## CSS

compile '/css/**/*.scss' do
  filter :sass, Compass.sass_engine_options.merge(
    :syntax => :scss,
    :style => :compressed
  )
end
route '/css/**/*.scss' do
  @item.identifier.without_ext + ".css"
end

compile '/css/**/*.css' do
  filter :minify
end

route '/css/**/*.css' do
  item.identifier.to_s
end


## htaccess

compile '/htaccess.txt' do
  filter :erb
end
route '/htaccess.txt' do
  '/.htaccess'
end


## sitemap

compile '/sitemap.haml' do
  filter :haml
end
route '/sitemap.haml' do
  item.identifier.without_ext + '.xml'
end

## defaults

compile '/**/*.md' do
  filter :erb
  filter :kramdown, {
    :smart_quotes => "apos,apos,quot,quot",
    :coderay_line_numbers => nil,
    :coderay_tab_width => 4,
    :coderay_wrap => :div,
    :coderay_css => :class
  }

  # read layout from items
  if item[:layout] != nil
    layout item[:layout]
  else
    layout '/default.html'
  end

  filter :md_links
  #filter :relativize_paths, :type => :html
  filter :htmlcompressor
end

## Icalendar

compile '/**/index.md', :rep => :ical do
  if item.key?(:event) && item[:event] != nil && item[:event] != ''
    filter :erb
    filter :ical_events, :date => item[:event], :timestart => item[:event_start], :timeend => item[:event_end], :title => item[:title], :venue => item[:venue]
  end
end

compile '/**/*' do
end

# root content
route '/*.{html,md}' do
  if item.identifier =~ '/index.*'
    '/index.html'
  else
    item.identifier.without_ext + '.html'
  end
end

# subfolders
route '/**/*.{html,md}' do
  if item.identifier =~ '/**/index.*'
    item.identifier.without_ext + '.html'
  else
    item.identifier.without_ext + '/index.html'
  end
end

# root content ICS
route '/*.index.md', :rep => :ical do
  if item.key?(:event) && item[:event] != nil && item[:event] != ''
    item.identifier.without_ext + '.ics'
  end
end

# subfolders ICS
route '/**/index.md', :rep => :ical do
  if item.key?(:event) && item[:event] != nil && item[:event] != ''
    item.identifier.without_ext + '.ics'
  end
end

route '/**/*' do
  item.identifier.to_s
end

## Layout rule

layout '/**/*', :erb
